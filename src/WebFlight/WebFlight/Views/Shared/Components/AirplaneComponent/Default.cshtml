@model AirplaneViewModel

<div class="container-fluid mt-4">
    <h2>Create New Air Planes</h2>
    <div class="row">
        <form asp-action="Add" method="post" class="mt-3">
            <input type="hidden" asp-for="Plane.Id"/>
            <input type="hidden" asp-for="Mode"/>
            <div class="form-group">
                <label asp-for="Plane.Name">Name:</label>
                <input asp-for="Plane.Name" type="text" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Plane.Speed">Speed:</label>
                <input asp-for="Plane.Speed" type="number" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Plane.FuelConsumption">Fuel Consumption:</label>
                <input asp-for="Plane.FuelConsumption" type="number" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Plane.TakeoffDuration">Takeoff Duration:</label>
                <input asp-for="Plane.TakeoffDuration" type="time" class="form-control" required/>
            </div>
            <div class="form-group">
                <label asp-for="Plane.TakeoffEffort">Takeoff Effort:</label>
                <input asp-for="Plane.TakeoffEffort" type="number" class="form-control" required/>
            </div>
            @if (Model.Mode == 0)
            {
                <button type="submit" class="w-25 btn btn-primary mt-4">Add</button>
            }
            @if (Model.Mode == 1)
            {
                <button type="submit" class=" w-25 btn btn-primary mt-4">Update</button>
            }
        </form>
    </div>
</div>
<div>
    <hr/>
</div>
<div class="container-fluid mt-4">
    <h2>Available Air Planes</h2>
    <div class="row">
        <table>
            <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Speed</th>
                <th>Fuel Consumption</th>
                <th>Takeoff Duration</th>
                <th>Takeoff Effort</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var airplane in Model.Planes)
            {
                <tr>
                    <td>@airplane.Id</td>
                    <td>@airplane.Name</td>
                    <td>@airplane.Speed</td>
                    <td>@airplane.FuelConsumption</td>
                    <td>@airplane.TakeoffDuration</td>
                    <td>@airplane.TakeoffEffort</td>
                    <td>
                        <a asp-action="Index" asp-route-id="@airplane.Id">Edit</a>|
                        <a asp-action="Remove" asp-route-id="@airplane.Id">Remove</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>